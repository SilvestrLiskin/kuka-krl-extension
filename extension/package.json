{
  "name": "kuka-krl-extension",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "1.7.0",
  "icon": "logo.png",
  "publisher": "LiskinLabs",
  "author": {
    "name": "Liskin Labs",
    "email": "silvlis@outlook.com",
    "url": "https://github.com/SilvestrLiskin"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SilvestrLiskin/kuka-krl-extension.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/SilvestrLiskin/kuka-krl-extension",
  "bugs": {
    "url": "https://github.com/SilvestrLiskin/kuka-krl-extension/issues"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters",
    "Themes",
    "Snippets"
  ],
  "keywords": [
    "kuka",
    "krl",
    "robot",
    "industrial",
    "automation",
    "robotics",
    "kuka robot language"
  ],
  "galleryBanner": {
    "color": "#FF6600",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/github/v/release/SilvestrLiskin/kuka-krl-extension",
      "href": "https://github.com/SilvestrLiskin/kuka-krl-extension/releases",
      "description": "GitHub Release"
    },
    {
      "url": "https://img.shields.io/github/license/SilvestrLiskin/kuka-krl-extension",
      "href": "https://github.com/SilvestrLiskin/kuka-krl-extension/blob/main/LICENSE.txt",
      "description": "License"
    },
    {
      "url": "https://img.shields.io/badge/Sponsor-%E2%9D%A4-ea4aaa",
      "href": "https://github.com/sponsors/SilvestrLiskin",
      "description": "Sponsor"
    }
  ],
  "sponsor": {
    "url": "https://github.com/sponsors/SilvestrLiskin"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./client/out/main.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "krl",
        "aliases": [
          "KUKA KRL",
          "krl"
        ],
        "extensions": [
          ".src",
          ".dat",
          ".sub"
        ],
        "configuration": "./client/krl-language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "krl",
        "path": "./client/snippets/krl.code-snippets"
      }
    ],
    "grammars": [
      {
        "language": "krl",
        "scopeName": "source.krl",
        "path": "./client/syntaxes/krl.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "KRL WorkVisual",
        "uiTheme": "vs",
        "path": "./client/themes/WorkVisual-theme.json"
      },
      {
        "label": "KRL WorkVisual Dark",
        "uiTheme": "vs-dark",
        "path": "./client/themes/WorkVisual-dark-theme.json"
      },
      {
        "label": "KRL Modern Dark",
        "uiTheme": "vs-dark",
        "path": "./client/themes/krl-modern-dark-theme.json"
      },
      {
        "label": "KRL High Contrast",
        "uiTheme": "hc-light",
        "path": "./client/themes/krl-high-contrast-theme.json"
      },
      {
        "label": "KRL Monokai",
        "uiTheme": "vs-dark",
        "path": "./client/themes/krl-monokai-theme.json"
      },
      {
        "label": "KRL Tao",
        "uiTheme": "vs-dark",
        "path": "./client/themes/krl-tao-theme.json"
      },
      {
        "label": "KRL Tao Dark",
        "uiTheme": "vs-dark",
        "path": "./client/themes/krl-tao-darker-theme.json"
      }
    ],
    "iconThemes": [
      {
        "id": "krl-icons",
        "label": "KRL File Icons",
        "path": "./client/krl-icon-theme.json"
      }
    ],
    "commands": [
      {
        "command": "krl.validateWorkspace",
        "title": "%command.validateWorkspace%",
        "category": "KRL",
        "icon": "$(check-all)"
      },
      {
        "command": "krl.foldAll",
        "title": "%command.foldAll%",
        "category": "KRL",
        "icon": "$(fold)"
      },
      {
        "command": "krl.unfoldAll",
        "title": "%command.unfoldAll%",
        "category": "KRL",
        "icon": "$(unfold)"
      },
      {
        "command": "krl.formatDocument",
        "title": "%command.formatDocument%",
        "category": "KRL",
        "icon": "$(code)"
      },
      {
        "command": "krl.removeTrailingWhitespace",
        "title": "%command.removeTrailingWhitespace%",
        "category": "KRL",
        "icon": "$(whitespace)"
      },
      {
        "command": "krl.sortDeclarations",
        "title": "%command.sortDeclarations%",
        "category": "KRL",
        "icon": "$(list-ordered)"
      },
      {
        "command": "krl.insertFold",
        "title": "%command.insertFold%",
        "category": "KRL",
        "icon": "$(symbol-namespace)"
      },
      {
        "command": "krl.generateDocumentation",
        "title": "%command.generateDocumentation%",
        "category": "KRL",
        "icon": "$(book)"
      },
      {
        "command": "krl.findSystemVariables",
        "title": "%command.findSystemVariables%",
        "category": "KRL",
        "icon": "$(search)"
      },
      {
        "command": "krl.refreshIOView",
        "title": "%command.refreshIOView%",
        "category": "KRL",
        "icon": "$(refresh)"
      },
      {
        "command": "krl.refreshKRCView",
        "title": "%command.refreshKRCView%",
        "category": "KRL",
        "icon": "$(refresh)"
      },
      {
        "command": "krl.cleanupUnusedVariables",
        "title": "Clean Up Unused Variables",
        "category": "KRL",
        "icon": "$(trash)"
      },
      {
        "command": "krl.deploy",
        "title": "Deploy to Robot (FTP)",
        "category": "KRL",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "krl.openArchive",
        "title": "Open KUKA Archive (ZIP)",
        "category": "KRL",
        "icon": "$(archive)"
      },
      {
        "command": "krl.showCalculator",
        "title": "KRL Frame Calculator",
        "category": "KRL",
        "icon": "$(calculator)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "krlIO",
          "name": "KRL I/O Signals",
          "when": "workbenchState != empty"
        },
        {
          "id": "krlKRC",
          "name": "KRC Project",
          "when": "workbenchState != empty"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "krl.foldAll",
          "group": "navigation@1",
          "when": "resourceLangId == krl"
        },
        {
          "command": "krl.unfoldAll",
          "group": "navigation@2",
          "when": "resourceLangId == krl"
        },
        {
          "command": "krl.formatDocument",
          "group": "navigation@3",
          "when": "resourceLangId == krl"
        },
        {
          "command": "krl.validateWorkspace",
          "group": "navigation@4",
          "when": "resourceLangId == krl"
        }
      ],
      "editor/context": [
        {
          "command": "krl.validateWorkspace",
          "group": "1_modification@1",
          "when": "resourceLangId == krl"
        },
        {
          "command": "krl.formatDocument",
          "group": "1_modification@2",
          "when": "resourceLangId == krl"
        },
        {
          "command": "krl.removeTrailingWhitespace",
          "group": "1_modification@3",
          "when": "resourceLangId == krl"
        },
        {
          "command": "krl.sortDeclarations",
          "group": "1_modification@4",
          "when": "resourceLangId == krl"
        },
        {
          "command": "krl.insertFold",
          "group": "1_modification@5",
          "when": "resourceLangId == krl"
        },
        {
          "command": "krl.cleanupUnusedVariables",
          "group": "1_modification@6",
          "when": "resourceLangId == krl"
        }
      ]
    },
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "krl.autoFold": {
          "type": "boolean",
          "default": false,
          "description": "%config.autoFold.description%"
        },
        "krl.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "%config.formatOnSave.description%"
        },
        "krl.removeTrailingWhitespaceOnFormat": {
          "type": "boolean",
          "default": true,
          "description": "%config.removeTrailingWhitespaceOnFormat.description%"
        },
        "krl.indentWidth": {
          "type": "integer",
          "default": 3,
          "minimum": 1,
          "maximum": 8,
          "description": "%config.indentWidth.description%"
        },
        "krl.separateBeforeBlocks": {
          "type": "boolean",
          "default": false,
          "description": "%config.separateBeforeBlocks.description%"
        },
        "krl.separateAfterBlocks": {
          "type": "boolean",
          "default": false,
          "description": "%config.separateAfterBlocks.description%"
        },
        "krl.validateNonAscii": {
          "type": "boolean",
          "default": true,
          "description": "%config.validateNonAscii.description%"
        },
        "krl.deploy.ip": {
          "type": "string",
          "default": "172.31.1.147",
          "description": "Robot IP address for FTP deployment"
        },
        "krl.deploy.user": {
          "type": "string",
          "default": "kukauser",
          "description": "FTP User"
        },
        "krl.deploy.password": {
          "type": "string",
          "default": "kukauser",
          "description": "FTP Password"
        },
        "krl.deploy.targetPath": {
          "type": "string",
          "default": "/R1/Program",
          "description": "Remote target path"
        },
        "krl.errorLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show diagnostic messages inline at the end of lines"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -b client server",
    "watch": "tsc -b client server -w",
    "lint": "eslint . --ext .ts",
    "test": "node tests/extension.test.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "basic-ftp": "^5.1.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.1.0"
  }
}