{
    "$schema": "vscode://schemas/color-theme",
    "name": "KRL Monokai",
    "type": "dark",
    "colors": {
        "editor.background": "#272822",
        "editor.foreground": "#F8F8F2",
        "editor.selectionBackground": "#49483E",
        "editor.lineHighlightBackground": "#3E3D32",
        "editorCursor.foreground": "#F8F8F0",
        "editorWhitespace.foreground": "#464741",
        "editorLineNumber.foreground": "#90908A",
        "editorLineNumber.activeForeground": "#C2C2BF",
        "editorIndentGuide.background1": "#464741",
        "editorIndentGuide.activeBackground1": "#767771",
        "editorBracketMatch.background": "#3E3D32",
        "editorBracketMatch.border": "#75715E",
        "editor.foldBackground": "#75715E30",
        "sideBar.background": "#21201E",
        "sideBar.foreground": "#F8F8F2",
        "activityBar.background": "#272822",
        "activityBar.foreground": "#F8F8F2",
        "statusBar.background": "#FF6600",
        "statusBar.foreground": "#FFFFFF",
        "titleBar.activeBackground": "#1E1F1C",
        "titleBar.activeForeground": "#F8F8F2",
        "tab.activeBackground": "#272822",
        "tab.activeBorder": "#F92672"
    },
    "tokenColors": [
        {
            "name": "Comments",
            "scope": [
                "comment",
                "comment.line",
                "comment.block"
            ],
            "settings": {
                "foreground": "#75715E",
                "fontStyle": "italic"
            }
        },
        {
            "name": "FOLD regions",
            "scope": [
                "meta.fold.krl",
                "comment.line.fold.krl"
            ],
            "settings": {
                "foreground": "#9A958A",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Keywords",
            "scope": [
                "keyword",
                "keyword.control",
                "keyword.control.krl",
                "keyword.other.krl"
            ],
            "settings": {
                "foreground": "#F92672"
            }
        },
        {
            "name": "Storage types",
            "scope": [
                "storage.type",
                "storage.type.krl",
                "storage.modifier"
            ],
            "settings": {
                "foreground": "#F92672",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Movement commands",
            "scope": [
                "keyword.function.movement.krl"
            ],
            "settings": {
                "foreground": "#FD971F",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Approximation modes",
            "scope": [
                "constant.language.approximation.krl"
            ],
            "settings": {
                "foreground": "#FD971F"
            }
        },
        {
            "name": "Strings",
            "scope": [
                "string",
                "string.quoted"
            ],
            "settings": {
                "foreground": "#E6DB74"
            }
        },
        {
            "name": "Numbers",
            "scope": [
                "constant.numeric"
            ],
            "settings": {
                "foreground": "#AE81FF"
            }
        },
        {
            "name": "Boolean constants",
            "scope": [
                "constant.language",
                "constant.language.boolean.krl"
            ],
            "settings": {
                "foreground": "#AE81FF"
            }
        },
        {
            "name": "Enum values",
            "scope": [
                "variable.other.enummember.krl",
                "constant.language.enum.krl"
            ],
            "settings": {
                "foreground": "#66D9EF"
            }
        },
        {
            "name": "System variables ($)",
            "scope": [
                "variable.language.system.krl",
                "punctuation.definition.variable.krl"
            ],
            "settings": {
                "foreground": "#FD971F",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Axis components",
            "scope": [
                "variable.language.axis.krl"
            ],
            "settings": {
                "foreground": "#F8F8F2",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Data arrays",
            "scope": [
                "variable.language.data.krl"
            ],
            "settings": {
                "foreground": "#66D9EF",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Functions",
            "scope": [
                "entity.name.function",
                "support.function",
                "support.function.builtin.krl"
            ],
            "settings": {
                "foreground": "#A6E22E"
            }
        },
        {
            "name": "Operators",
            "scope": [
                "keyword.operator"
            ],
            "settings": {
                "foreground": "#F92672"
            }
        },
        {
            "name": "Invalid identifiers",
            "scope": [
                "invalid.illegal"
            ],
            "settings": {
                "foreground": "#F92672",
                "fontStyle": "underline"
            }
        }
    ]
}