{
    "name": "KRL Bearded Monokai",
    "type": "dark",
    "colors": {
        "editor.background": "#262329",
        "editor.foreground": "#d9d5dc",
        "editorCursor.foreground": "#ffd866",
        "editorIndentGuide.activeBackground": "#665f6d",
        "activityBar.background": "#201e23",
        "activityBarBadge.background": "#ffd866",
        "activityBarBadge.foreground": "#262329",
        "sideBar.background": "#262329",
        "sideBar.border": "#171518",
        "list.activeSelectionForeground": "#ffd866",
        "list.activeSelectionBackground": "#332f37",
        "list.hoverBackground": "#232126",
        "statusBar.background": "#201e23",
        "statusBar.foreground": "#d9d5dc",
        "tab.activeBorder": "#ffd866",
        "tab.activeBackground": "#262329",
        "titleBar.activeBackground": "#201e23"
    },
    "tokenColors": [
        {
            "scope": [
                "comment"
            ],
            "settings": {
                "foreground": "#665f6d",
                "fontStyle": "italic"
            }
        },
        {
            "scope": "string",
            "settings": {
                "foreground": "#a9dc76"
            }
        },
        {
            "scope": "constant.numeric",
            "settings": {
                "foreground": "#fc9867"
            }
        },
        {
            "name": "KRL Comments",
            "scope": [
                "comment.line"
            ],
            "settings": {
                "foreground": "#665f6d",
                "fontStyle": "italic"
            }
        },
        {
            "name": "KRL Comments",
            "scope": [
                "comment.line",
                "comment.line.semicolon.krl",
                "comment.line.ampersand.krl",
                "comment.line.bug.krl",
                "comment.line.fixme.krl",
                "comment.line.hack.krl",
                "comment.line.note.krl",
                "comment.line.todo.krl"
            ],
            "settings": {
                "foreground": "#665f6d",
                "fontStyle": "italic"
            }
        },
        {
            "name": "KRL Fold Markers (High Visibility)",
            "scope": [
                "comment.line.fold.krl",
                "meta.fold.krl",
                "keyword.control.fold.krl"
            ],
            "settings": {
                "foreground": "#ffd866",
                "fontStyle": "bold"
            }
        },
        {
            "name": "KRL Control Keywords",
            "scope": [
                "keyword.control.krl"
            ],
            "settings": {
                "foreground": "#ab9df2",
                "fontStyle": "bold"
            }
        },
        {
            "name": "KRL Movement Commands (POP)",
            "scope": [
                "keyword.function.movement.krl"
            ],
            "settings": {
                "foreground": "#78dce8",
                "fontStyle": "bold"
            }
        },
        {
            "name": "KRL Storage/Types",
            "scope": [
                "storage.type.krl",
                "storage.type.interrupt.krl",
                "storage.type.trigger.krl"
            ],
            "settings": {
                "foreground": "#ffd866",
                "fontStyle": "italic"
            }
        },
        {
            "name": "KRL System Variables",
            "scope": [
                "variable.language.system.krl"
            ],
            "settings": {
                "foreground": "#ff6188",
                "fontStyle": ""
            }
        },
        {
            "name": "KRL Numbers",
            "scope": [
                "constant.numeric.krl",
                "constant.numeric.hex.krl",
                "constant.numeric.binary.krl"
            ],
            "settings": {
                "foreground": "#fc9867"
            }
        },
        {
            "name": "KRL Strings",
            "scope": [
                "string.quoted.double.krl"
            ],
            "settings": {
                "foreground": "#a9dc76"
            }
        },
        {
            "name": "KRL User Functions",
            "scope": [
                "variable.function.krl"
            ],
            "settings": {
                "foreground": "#a9dc76"
            }
        },
        {
            "name": "KRL Enums",
            "scope": [
                "constant.language.enum.krl",
                "variable.other.enummember.krl"
            ],
            "settings": {}
        },
        {
            "name": "KRL Built-in Functions",
            "scope": [
                "support.function.builtin.krl"
            ],
            "settings": {}
        },
        {
            "name": "KRL Operators",
            "scope": [
                "keyword.operator.krl",
                "keyword.operator.comparison.krl",
                "keyword.operator.arithmetic.krl",
                "keyword.operator.bitwise.krl",
                "keyword.operator.logical.krl"
            ],
            "settings": {}
        }
    ]
}