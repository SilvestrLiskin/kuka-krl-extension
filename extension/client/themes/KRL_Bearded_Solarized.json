{
    "name": "KRL Bearded Solarized",
    "type": "dark",
    "colors": {
        "editor.background": "#132c34",
        "editor.foreground": "#c3e0e9",
        "editorCursor.foreground": "#4db0f7",
        "editorIndentGuide.activeBackground": "#367a90",
        "activityBar.background": "#10252c",
        "activityBarBadge.background": "#4db0f7",
        "activityBarBadge.foreground": "#132c34",
        "sideBar.background": "#132c34",
        "sideBar.border": "#0b191e",
        "list.activeSelectionForeground": "#4db0f7",
        "list.activeSelectionBackground": "#1a3c47",
        "list.hoverBackground": "#122930",
        "statusBar.background": "#10252c",
        "statusBar.foreground": "#c3e0e9",
        "tab.activeBorder": "#4db0f7",
        "tab.activeBackground": "#132c34",
        "titleBar.activeBackground": "#10252c"
    },
    "tokenColors": [
        {
            "scope": [
                "comment"
            ],
            "settings": {
                "foreground": "#367a90",
                "fontStyle": "italic"
            }
        },
        {
            "scope": "string",
            "settings": {
                "foreground": "#a5b82e"
            }
        },
        {
            "scope": "constant.numeric",
            "settings": {
                "foreground": "#e8913b"
            }
        },
        {
            "name": "KRL Comments",
            "scope": [
                "comment.line"
            ],
            "settings": {
                "foreground": "#367a90",
                "fontStyle": "italic"
            }
        },
        {
            "name": "KRL Comments",
            "scope": [
                "comment.line",
                "comment.line.semicolon.krl",
                "comment.line.ampersand.krl",
                "comment.line.bug.krl",
                "comment.line.fixme.krl",
                "comment.line.hack.krl",
                "comment.line.note.krl",
                "comment.line.todo.krl"
            ],
            "settings": {
                "foreground": "#367a90",
                "fontStyle": "italic"
            }
        },
        {
            "name": "KRL Fold Markers (Subtle)",
            "scope": [
                "comment.line.fold.krl",
                "meta.fold.krl",
                "keyword.control.fold.krl"
            ],
            "settings": {
                "foreground": "#6a8a6a",
                "fontStyle": "italic"
            }
        },
        {
            "name": "KRL Control Keywords",
            "scope": [
                "keyword.control.krl"
            ],
            "settings": {
                "foreground": "#858bf7",
                "fontStyle": "bold"
            }
        },
        {
            "name": "KRL Movement Commands (POP)",
            "scope": [
                "keyword.function.movement.krl"
            ],
            "settings": {
                "foreground": "#26bbae",
                "fontStyle": "bold"
            }
        },
        {
            "name": "KRL Storage/Types",
            "scope": [
                "storage.type.krl",
                "storage.type.interrupt.krl",
                "storage.type.trigger.krl"
            ],
            "settings": {
                "foreground": "#e2ae10",
                "fontStyle": "italic"
            }
        },
        {
            "name": "KRL System Variables",
            "scope": [
                "variable.language.system.krl"
            ],
            "settings": {
                "foreground": "#f154a0",
                "fontStyle": ""
            }
        },
        {
            "name": "KRL Numbers",
            "scope": [
                "constant.numeric.krl",
                "constant.numeric.hex.krl",
                "constant.numeric.binary.krl"
            ],
            "settings": {
                "foreground": "#e8913b"
            }
        },
        {
            "name": "KRL Strings",
            "scope": [
                "string.quoted.double.krl"
            ],
            "settings": {
                "foreground": "#a5b82e"
            }
        },
        {
            "name": "KRL User Functions",
            "scope": [
                "variable.function.krl"
            ],
            "settings": {}
        },
        {
            "name": "KRL Enums",
            "scope": [
                "constant.language.enum.krl",
                "variable.other.enummember.krl"
            ],
            "settings": {}
        },
        {
            "name": "KRL Built-in Functions",
            "scope": [
                "support.function.builtin.krl"
            ],
            "settings": {}
        },
        {
            "name": "KRL Operators",
            "scope": [
                "keyword.operator.krl",
                "keyword.operator.comparison.krl",
                "keyword.operator.arithmetic.krl",
                "keyword.operator.bitwise.krl",
                "keyword.operator.logical.krl"
            ],
            "settings": {}
        }
    ]
}