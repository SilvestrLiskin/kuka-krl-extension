{
    "$schema": "vscode://schemas/color-theme",
    "name": "KRL Bearded Exotic Coffee Cream",
    "type": "light",
    "colors": {
        "editor.background": "#FFFFFF",
        "editor.foreground": "#000000",
        "editor.selectionBackground": "#ADD6FF",
        "editor.lineHighlightBackground": "#F5F5F580",
        "editor.inactiveSelectionBackground": "#E5EBF1",
        "editorCursor.foreground": "#000000",
        "editorWhitespace.foreground": "#BFBFBF",
        "editorLineNumber.foreground": "#237893",
        "editorLineNumber.activeForeground": "#0B216F",
        "editorIndentGuide.background1": "#D3D3D3",
        "editorIndentGuide.activeBackground1": "#939393",
        "editorBracketMatch.background": "#FFD700",
        "editorBracketMatch.border": "#B9B9B9",
        "editor.foldBackground": "#E8F4FF40",
        "sideBar.background": "#F3F3F3",
        "sideBar.foreground": "#333333",
        "activityBar.background": "#2C2C2C",
        "activityBar.foreground": "#FFFFFF",
        "statusBar.background": "#007ACC",
        "statusBar.foreground": "#FFFFFF",
        "titleBar.activeBackground": "#DDDDDD",
        "titleBar.activeForeground": "#333333"
    },
    "tokenColors": [
        {
            "name": "Comments",
            "scope": [
                "comment",
                "comment.line",
                "comment.block",
                "comment.line.semicolon.krl",
                "comment.line.ampersand.krl"
            ],
            "settings": {
                "foreground": "#008000"
            }
        },
        {
            "name": "FOLD regions",
            "scope": [
                "meta.fold.krl",
                "comment.line.fold.krl"
            ],
            "settings": {
                "foreground": "#808080",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Keywords",
            "scope": [
                "keyword",
                "keyword.control",
                "keyword.control.krl",
                "keyword.other.krl"
            ],
            "settings": {
                "foreground": "#0000FF",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Storage types",
            "scope": [
                "storage.type",
                "storage.type.krl",
                "storage.modifier",
                "storage.type.interrupt.krl",
                "storage.type.trigger.krl"
            ],
            "settings": {
                "foreground": "#0000FF",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Movement commands",
            "scope": [
                "keyword.function.movement.krl"
            ],
            "settings": {
                "foreground": "#800080",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Approximation modes",
            "scope": [
                "constant.language.approximation.krl"
            ],
            "settings": {
                "foreground": "#800080"
            }
        },
        {
            "name": "Strings",
            "scope": [
                "string",
                "string.quoted",
                "string.quoted.double.krl"
            ],
            "settings": {
                "foreground": "#A31515"
            }
        },
        {
            "name": "Numbers",
            "scope": [
                "constant.numeric",
                "constant.numeric.krl",
                "constant.numeric.hex.krl",
                "constant.numeric.binary.krl"
            ],
            "settings": {
                "foreground": "#098658"
            }
        },
        {
            "name": "Boolean constants",
            "scope": [
                "constant.language",
                "constant.language.boolean.krl"
            ],
            "settings": {
                "foreground": "#0000FF",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Enum values",
            "scope": [
                "variable.other.enummember.krl",
                "constant.language.enum.krl"
            ],
            "settings": {
                "foreground": "#2B91AF"
            }
        },
        {
            "name": "System variables ($)",
            "scope": [
                "variable.language.system.krl",
                "punctuation.definition.variable.krl"
            ],
            "settings": {
                "foreground": "#2B91AF",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Axis components",
            "scope": [
                "variable.language.axis.krl"
            ],
            "settings": {
                "foreground": "#001080"
            }
        },
        {
            "name": "Data arrays",
            "scope": [
                "variable.language.data.krl"
            ],
            "settings": {
                "foreground": "#2B91AF"
            }
        },
        {
            "name": "Functions",
            "scope": [
                "entity.name.function",
                "support.function",
                "support.function.builtin.krl"
            ],
            "settings": {
                "foreground": "#795E26"
            }
        },
        {
            "name": "Operators",
            "scope": [
                "keyword.operator",
                "keyword.operator.comparison.krl",
                "keyword.operator.arithmetic.krl",
                "keyword.operator.logical.krl",
                "keyword.operator.bitwise.krl"
            ],
            "settings": {
                "foreground": "#000000"
            }
        },
        {
            "name": "Punctuation",
            "scope": [
                "punctuation.krl",
                "punctuation.definition.enum.krl"
            ],
            "settings": {
                "foreground": "#000000"
            }
        },
        {
            "name": "Invalid identifiers",
            "scope": [
                "invalid.illegal.identifier.digit.krl",
                "invalid.illegal.identifier.toolong.krl"
            ],
            "settings": {
                "foreground": "#FF0000",
                "fontStyle": "underline"
            }
        }
    ]
}